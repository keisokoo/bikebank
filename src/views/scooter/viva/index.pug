extends ../../../includes/layout.pug

block styles
  link(rel="stylesheet" href=require("../../../../node_modules/swiper/swiper-bundle.min.css"))
  link(rel="stylesheet", href=require("../../../sass/viva.scss"))

block contents
  .viva-one(style={"background-image":`url(${require("../../../images/scooter/viva/img-viva-kv.png")})`})
  .viva-two
    div
      .t1 고고로 비바
      a.link(href=publicPath+"/customer") 차량문의
  .viva-three
    .text 초경량 스마트 스쿠터 <br/>Gogoro VIVA <br/><br/>일상에서 도시를 탐험하고  <br/>소소한 행복을 누리세요.
  .viva-four(style={"background-image":`url(${require("../../../images/scooter/viva/img-video-placeholder.png")})`})
    a.link(href="https://www.youtube.com/watch?v=h8n41wUiw50" target="_blank")
      img(src=require("../../../images/play.svg"))
      div 전체 비디오 보기
  .viva-five(style={"background-image":`url(${require("../../../images/scooter/viva/img-divider-experience-bg.png")})`})
    .img(style={"background-image":`url(${require("../../../images/scooter/viva/img-divider-experience-scooter.png")})`})
    .text-box
      .sub Ultra simplicity
      .t1 완벽한 크기, <br/>놀라운 승차감
  .viva-six
    .t1 원하는 곳 어디든 갈 수 있습니다. <br/>일상에 맞춘 완벽한 균형
    .grid-box
      div
        .one.img
          img(src=require("../../../images/scooter/viva/img-experience-1.png"))
          .text-box
            .sub Ultra simplicity
            .t1 단순하지만 더욱더 든든하게. <br/>어디든 걱정하지 마세요. <br/>장소에 상관없이 누리는 자유
      div
        .two.img
          img.pc(src=require("../../../images/scooter/viva/img-experience-2.png"))
          img.mobile(src=require("../../../images/scooter/viva/img-experience-2_m.png"))
          .text-box
            .sub Just right
            .t1 콤팩트한 디자인은 <br/>더 잘 움직이고 더 쉽게 <br/>주차할 수 있습니다.
      div
        .three.img
          img.pc(src=require("../../../images/scooter/viva/img-experience-3.png"))
          img.mobile(src=require("../../../images/scooter/viva/img-experience-3_m.png"))
          .text-box
            .sub Simple is the best
            .t1 복잡함은 이제 그만. <br/>작지만 새로운 파워. <br/>어마무시한 가능성
  .viva-seven
    .img.pc(style={"background-image":`url(${require("../../../images/scooter/viva/back.png")})`})
    .img.mobile(style={"background-image":`url(${require("../../../images/scooter/viva/back_m.png")})`})
    .text-box
      .sub Ultra easy
      .t1 더 쉽고 더 완벽한
  .viva-eight
    .t1 작지만 시선을 사로잡는 <br/>균형 잡힌 완벽함
    -
      var describesOne = [
        {url:"../../../images/scooter/viva/img-hardware-1.png", title:"21.6L 대용량 수납공간"},
        {url:"../../../images/scooter/viva/img-hardware-2.png", title:"스마트 배터리"},
        {url:"../../../images/scooter/viva/img-hardware-3.png", title:"SBS 싱크로나이즈드\n브레이크 시스템*"},
        {url:"../../../images/scooter/viva/img-hardware-4.png", title:"풀 LED 조명 시스템"},
        {url:"../../../images/scooter/viva/img-hardware-5.png", title:"내구성 높은 기술"},
      ];
    .swiper-outer 
      button.slide-control-btn.prev
        img(src=require("../../../images/prev_arrow.svg"))
      button.slide-control-btn.next
        img(src=require("../../../images/next_arrow.svg"))
      div(class=`swiper-describe-one swiper-box`)
        div.swiper-wrapper
          each val, index in describesOne
            div.swiper-slide 
              img.img-box(src=require(val.url))
              .text-box
                .t1=val.title
  .viva-nine(style={"background-image":`url(${require("../../../images/scooter/viva/img-divider-design-bg.png")})`})
    .img(style={"background-image":`url(${require("../../../images/scooter/viva/img-divider-design-scooter.png")})`})
    .text-box
      .sub Ultra attractive
      .t1 매력적이고 <br/>콤팩트한 디자인
  .viva-ten
    .t1 모두의 시선을 사로잡는 <br/>트렌디하고 콤팩트한 디자인
    .grid-box
      div
        .one.img(style={"background-image":`url(${require("../../../images/scooter/viva/img-design-1.png")})`})
          .text-box
            .sub 캡슐형 헤드라이트
            .t1 VIVA 패밀리 캡슐 디자인. <br/>도시의 중심에서 <br/>현대와 클래식 스타일을  <br/>과감하게 믹스 앤 매치하십시오.
      div
        .two.img(style={"background-image":`url(${require("../../../images/scooter/viva/img-design-2.png")})`})
          .text-box
            .sub 가벼운 핸들
            .t1 고정관념을 뛰어 넘은 <br/>가볍고 매력적인 핸들은 <br/>골목, 거리를 쉽고 편하게 <br/>이동할 수 있습니다.
      div
        .three.img(style={"background-image":`url(${require("../../../images/scooter/viva/img-design-3.png")})`})
          .text-box
            .sub 미니멀리스트 페달
            .t1 인체공학적 페달은 모든 <br/>신체 유형에 적합하여 유연하게 <br/>사용할 수 있는 공간을 제공합니다.
      div
        .four.img(style={"background-image":`url(${require("../../../images/scooter/viva/img-design-4.png")})`})
          .text-box
            .sub 선형 랜덤 테일라이트
            .t1 어둠을 가르는 깨끗한 선. <br/>길을 따라가는 눈, 당신을 <br/>바라보는 것만으로도 충분합니다!
  .viva-eleven(style={"background-image":`url(${require("../../../images/scooter/viva/img-divider-features-bg.png")})`})
    .img(style={"background-image":`url(${require("../../../images/scooter/viva/img-divider-features-scooter.png")})`})
    .text-box
      .sub Ultra smart
      .t1 더 나은 삶 더 나은 주행
  .viva-twelve
    .t1 일상의 편리함을 더해주는 심플하고 세심한 설계
    .grid-box
      div
        .one.img(style={"background-image":`url(${require("../../../images/scooter/viva/img-features-1.png")})`})
          .text-box
            .sub 통합 파워트레인
            .t1 소프트 및 하드웨어가 사용되어 <br/>모터 드라이브의 파형을 미세 조정하고 <br/>펌웨어 최적화와 동기화를 통해 <br/>매우 안정적이고 부드러운 이동을<br/>구현합니다.
      div
        .two.img(style={"background-image":`url(${require("../../../images/scooter/viva/20220523_183816.png")})`})
          .text-box
            .sub 느끼는대로 발송해드립니다
            .t1 iQ System® 스마트 키 카드 * ,<br/>탭하여 이동하고 즉시 도시의 <br/>재미를 탐험하십시오.
      div
        .three.img(style={"background-image":`url(${require("../../../images/scooter/viva/20220523_183849.png")})`})
          .text-box
            .sub 스마트, 커스텀
            .t1 심지어... 음향 효과부터 <br/>보안, 도난 방지까지 모든 것이 <br/>당신의 개성에 따라 <br/>설정될 수 있습니다!
      div
        .four.img(style={"background-image":`url(${require("../../../images/scooter/viva/img-features-2.png")})`})
          .text-box
            .sub 당신 차량에 대한 모든 것이 손 안에 있습니다.
            .t1 Gogoro® 앱을 열고 가장 가까운 <br/>GoStation® 배터리 교체 스테이션을 <br/>찾거나 기본 차량 상태 진단을 <br/>하거나 유지 보수를 예약하세요.
  .viva-thirteen(style={"background-image":`url(${require("../../../images/scooter/viva/20220523_184838.png")})`})
    .title-box
      img(src=require("../../../images/scooter/viva/icon-gostation.png"))
      .t1 스왑 앤 고
  .viva-fourteen(style={"background-image":`url(${require("../../../images/scooter/viva/gogoro-network.png")})`})
  .viva-fifteen
    .viva-motors-wrapper
      img(src=require("../../../images/scooter/viva/img-series-model-keyless.png"))
      .t1 고고로 비바
      .sub 열쇠가 없는
      .colors
        span(style={"background-color":"#E1E124"})
        span(style={"background-color":"#41447A"})
        span(style={"background-color":"#DCDCDC"})
        span(style={"background-color":"#FDCAD4"})
    .details
      .t1 디테일
      .details-box
        div
          .box-row
            .s1 길이 x 너비 x 높이 (백미러 제외)
            .d1 1,770 x 725 x 1,093mm
          .box-row
            .s1 휠베이스
            .d1 1,235mm
          .box-row
            .s1 안장 높이
            .d1 745mm
          .box-row
            .s1 무게 (비어 있음/배터리 포함)
            .d1 94/112kg
        div
          .box-row
            .s1 최대 전력
            .d1 6.0kW @3,000rpm
          .box-row
            .s1 최대 토크 (모터/휠)
            .d1 21 / 150Nm @ 0-2,500rpm
          .box-row
            .s1 등판성
            .d1 30%(17°): 35km/h#[br]20%(11°): 45km/h#[br]10%(6°): 65km/h
      .extra-describes * 이 표는 참고용이며 테스트 시나리오에 따라 결과가 달라질 수 있습니다.#[br]* 자세한 정보는 고객센터를 통해 확인해주시기 바랍니다.
block page-script
  script(type="module" src=require("../../../scripts/viva.ts"))