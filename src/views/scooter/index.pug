extends ../../includes/layout.pug

mixin scooterPageSlider(clName, listArr, title, contents, last=false)
  div(class=`describe-wrapper-${clName} describe-wrapper${last?' last':''}`)
    .describe-title
      .t1=title
      .sub=contents
    div(class=`swiper-describe-${clName} swiper-box`)
      button.slide-control-btn.prev
        img(src=require("../../images/prev_arrow.svg"))
      button.slide-control-btn.next
        img(src=require("../../images/next_arrow.svg"))
      div.swiper-wrapper
        each val, index in listArr
          div.swiper-slide 
            .img-box(style={"background-image":`url(${require(val.url)})`})
            .text-box
              .t1=val.title
              .sub=val.sub

block styles
  link(rel="stylesheet" href=require("../../../node_modules/swiper/swiper-bundle.min.css"))

